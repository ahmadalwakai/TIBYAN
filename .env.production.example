# ===========================================
# Tibyan LMS - Production Environment Variables
# ===========================================
# For Vercel deployment - Set these in Vercel Project Settings > Environment Variables

# ============================================
# DATABASE (REQUIRED)
# ============================================
DATABASE_URL="postgresql://user:password@host:5432/tibyan?sslmode=require&pgbouncer=true"
DIRECT_DATABASE_URL="postgresql://user:password@host:5432/tibyan?sslmode=require"

# ============================================
# AUTHENTICATION (REQUIRED)
# ============================================
# JWT secret for custom auth (this app uses custom JWT cookies, NOT NextAuth)
# Generate with: openssl rand -hex 32
JWT_SECRET="your-64-character-hex-secret-here"

# ============================================
# APPLICATION
# ============================================
NEXT_PUBLIC_APP_URL="https://your-production-domain.vercel.app"
NEXT_PUBLIC_APP_NAME="تبيان"

# ============================================
# EMAIL SERVICE (REQUIRED FOR AUTH)
# ============================================
# Get your API key from https://resend.com
RESEND_API_KEY="re_live_xxxxxxxxxxxxxxxxxxxxxxxxxxxx"
FROM_EMAIL="noreply@yourdomain.com"

# ============================================
# AI AGENT / LLM PROVIDER (REQUIRED)
# ============================================
# For Vercel production, use "mock" (no external AI calls)
LLM_PROVIDER="mock"

# Timeouts (optional, has sensible defaults)
LLM_TIMEOUT_MS="120000"
LLM_HEALTH_TIMEOUT_MS="1500"

# If you have a hosted AI service in the future:
# LLM_PROVIDER="zyphon"
# ZYPHON_API_KEY="your_api_key_here"
# ZYPHON_API_BASE_URL="https://api.your-ai-service.com/v1"
# ZYPHON_MODEL_ID="your-model-name"

# ============================================
# SECURITY & MONITORING (OPTIONAL)
# ============================================
# Sentry for error tracking
# SENTRY_DSN="https://xxx@sentry.io/xxx"

# Google Analytics
# NEXT_PUBLIC_GOOGLE_ANALYTICS="G-XXXXXXXXXX"

# ============================================
# REDIS (OPTIONAL - FOR CACHING)
# ============================================
# Recommended for production performance
# REDIS_URL="redis://default:xxx@xxx.upstash.io:6379"

# ============================================
# PAYMENT GATEWAY (OPTIONAL)
# ============================================
# Stripe for payments
# STRIPE_SECRET_KEY="sk_live_xxx"
# STRIPE_WEBHOOK_SECRET="whsec_xxx"
# NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_live_xxx"

# ============================================
# FILE STORAGE (OPTIONAL)
# ============================================
# Vercel Blob Storage
# BLOB_READ_WRITE_TOKEN="vercel_blob_xxx"

# Or Cloudinary
# CLOUDINARY_CLOUD_NAME="your-cloud-name"
# CLOUDINARY_API_KEY="xxx"
# CLOUDINARY_API_SECRET="xxx"

# ============================================
# SMTP EMAIL (ALTERNATIVE TO RESEND)
# ============================================
# If not using Resend, configure SMTP:
# SMTP_HOST="smtp.example.com"
# SMTP_PORT="587"
# SMTP_USER="user@example.com"
# SMTP_PASSWORD="your-smtp-password"
# SMTP_FROM="noreply@yourdomain.com"

# ============================================
# PRISMA (AUTO-CONFIGURED BY DEPLOYMENT)
# ============================================
# These are set automatically by vercel.json build config
# PRISMA_CLIENT_ENGINE_TYPE="binary"
# PRISMA_CLI_BINARY_TARGETS="rhel-openssl-3.0.x"
